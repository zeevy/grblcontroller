<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/text_inches"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RelativeOverlap" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/jog_inches"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.warkiz.widget.IndicatorStayLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.warkiz.widget.IndicatorSeekBar
                android:layout_height="wrap_content" android:layout_width="match_parent"
                app:isb_max="10" app:isb_min="0" app:isb_seek_smoothly="true"
                app:isb_show_indicator="rounded_rectangle" app:isb_progress_value_float="true"
                app:isb_show_tick_texts="true" app:isb_ticks_count="2" app:isb_tick_texts_color="@color/colorPrimary" app:isb_track_progress_color="@color/colorAccent"
                app:isb_track_background_color="@color/colorDivider" app:isb_thumb_color="@color/colorAccent" app:isb_indicator_color="@color/colorAccent"
                app:isb_track_background_size="3dp" app:isb_track_progress_size="5dp"
                android:id="@+id/jog_xy_step_seek_bar" />

        </com.warkiz.widget.IndicatorStayLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.warkiz.widget.IndicatorStayLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.warkiz.widget.IndicatorSeekBar
                android:layout_height="wrap_content" android:layout_width="match_parent"
                app:isb_max="10" app:isb_min="0" app:isb_seek_smoothly="true"
                app:isb_show_indicator="rounded_rectangle" app:isb_progress_value_float="true"
                app:isb_show_tick_texts="true" app:isb_ticks_count="2" app:isb_tick_texts_color="@color/colorPrimary" app:isb_track_progress_color="@color/colorAccent"
                app:isb_track_background_color="@color/colorDivider" app:isb_thumb_color="@color/colorAccent" app:isb_indicator_color="@color/colorAccent"
                app:isb_track_background_size="3dp" app:isb_track_progress_size="5dp"
                android:id="@+id/jog_z_step_seek_bar" />

        </com.warkiz.widget.IndicatorStayLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.warkiz.widget.IndicatorStayLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.warkiz.widget.IndicatorSeekBar
                android:layout_height="wrap_content" android:layout_width="match_parent"
                app:isb_max="2400" app:isb_min="0" app:isb_seek_smoothly="true"
                app:isb_show_indicator="rounded_rectangle"
                app:isb_show_tick_texts="true" app:isb_ticks_count="2" app:isb_tick_texts_color="@color/colorPrimary" app:isb_track_progress_color="@color/colorAccent"
                app:isb_track_background_color="@color/colorDivider" app:isb_thumb_color="@color/colorAccent" app:isb_indicator_color="@color/colorAccent"
                app:isb_track_background_size="3dp" app:isb_track_progress_size="5dp"
                android:id="@+id/jog_feed_seek_bar" />

        </com.warkiz.widget.IndicatorStayLayout>



    </RelativeLayout>


</LinearLayout>